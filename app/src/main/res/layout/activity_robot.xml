<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.hamitao.base_module.customview.MyToolBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.hamitao.base_module.customview.MyToolBar>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_robot_names"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_hight"></android.support.v7.widget.RecyclerView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_robot_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

</LinearLayout>