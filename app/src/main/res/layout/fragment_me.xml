<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@color/colorPrimary">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/face"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="15dp"
                        android:padding="1dp"
                        android:src="@drawable/icon_mother" />

                    <TextView
                        android:id="@+id/tv_nick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_below="@id/face"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="登录/注册"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_signIn"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/unread_read_point"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="签到"
                        android:textColor="@color/white"
                        android:visibility="gone" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingTop="20dp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_collection"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/item_click_selector"
                        android:drawablePadding="20dp"
                        android:drawableTop="@drawable/icon_me_collect"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:text="收藏"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_record"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/item_click_selector"
                        android:drawablePadding="13dp"
                        android:drawableTop="@drawable/icon_me_record"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:text="我的录音"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_recentPlay"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/item_click_selector"
                        android:drawablePadding="13dp"
                        android:drawableTop="@drawable/icon_me_recent"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:text="最近播放"
                        android:textSize="15sp" />

                </LinearLayout>

                <View style="@style/h_divider_gray" />

                <RelativeLayout
                    android:id="@+id/rl_machine"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_hight"
                    android:background="@drawable/item_click_selector"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="10dp"
                        android:drawableLeft="@drawable/icon_me_machine"
                        android:drawablePadding="10dp"
                        android:gravity="center"
                        android:text="我的机器人"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="10dp"
                        android:gravity="center_vertical" />

                    <View
                        style="@style/h_divider"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_schedule"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_hight"
                    android:background="@drawable/item_click_selector"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="10dp"
                        android:drawableLeft="@drawable/icon_me_schedule"
                        android:drawablePadding="10dp"
                        android:gravity="center"
                        android:text="我的课表"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="10dp"
                        android:gravity="center_vertical" />

                    <View
                        style="@style/h_divider"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_share"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_hight"
                    android:background="@drawable/item_click_selector"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="10dp"
                        android:drawableLeft="@drawable/icon_me_share"
                        android:drawablePadding="10dp"
                        android:gravity="center"
                        android:text="我的分享"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="10dp"
                        android:gravity="center_vertical" />
                </RelativeLayout>

                <View style="@style/h_divider_gray" />

                <RelativeLayout
                    android:id="@+id/rl_nfc"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_hight"
                    android:background="@drawable/item_click_selector"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:drawableLeft="@drawable/icon_me_card"
                        android:drawablePadding="10dp"
                        android:gravity="center"
                        android:text="制卡管理"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="10dp"
                        android:gravity="center_vertical" />

                    <View
                        style="@style/h_divider"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_setting"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_hight"
                    android:background="@drawable/item_click_selector"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="10dp"
                        android:drawableLeft="@drawable/icon_me_setting"
                        android:drawablePadding="10dp"
                        android:gravity="center"
                        android:text="设置"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="10dp"
                        android:gravity="center_vertical" />

                    <View
                        style="@style/h_divider"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin" />

                </RelativeLayout>


                <Button
                    android:id="@+id/btn_connectMachine"
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="50dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/btn_primary_shape"
                    android:text="连接机器人"
                    android:textColor="@color/white"
                    android:visibility="visible" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_searchTips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#60000000"
        android:padding="5dp"
        android:text="正在搜索机器人..."
        android:visibility="gone" />

</RelativeLayout>