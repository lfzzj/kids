<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/activity_background"
    tools:context="com.hamitao.kids.activity.SortResultActivity">

    <include
        android:id="@+id/title_bar"
        layout="@layout/title_bar" />

    <RadioGroup
        android:id="@+id/rg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_hight"
        android:layout_below="@id/title_bar"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/sort_rb1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_color_selector"
            android:button="@null"
            android:gravity="center"
            android:text=""
            android:textColor="@drawable/text_color_selector"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/sort_rb2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_color_selector"
            android:button="@null"
            android:gravity="center"
            android:text=""
            android:textColor="@drawable/text_color_selector"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/sort_rb3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_color_selector"
            android:button="@null"
            android:gravity="center"
            android:text=""
            android:textColor="@drawable/text_color_selector"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/sort_rb4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_color_selector"
            android:button="@null"
            android:gravity="center"
            android:text=""
            android:textColor="@drawable/text_color_selector"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/sort_rb5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_color_selector"
            android:button="@null"
            android:gravity="center"
            android:text=""
            android:textColor="@drawable/text_color_selector"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/sort_rb6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_color_selector"
            android:button="@null"
            android:gravity="center"
            android:text=""
            android:textColor="@drawable/text_color_selector"
            android:textSize="15sp" />

    </RadioGroup>

    <include
        layout="@layout/common_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rg" />

    <ImageView
        android:id="@+id/iv_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:src="@drawable/icon_player" />

</RelativeLayout>
