<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_base_dialog_whiteshape">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:text="宝宝性别"
        android:textColor="@color/text_default_d"
        android:textSize="16sp" />


    <RadioGroup
        android:layout_marginTop="10dp"
        android:id="@+id/rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_boy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/icon_sex_boy"
            android:gravity="center"
            android:tag="1"
            android:text="小王子"
            android:textColor="@drawable/text_color_selector"
            android:textSize="@dimen/textSize_16" />

        <RadioButton
            android:id="@+id/rb_girl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/icon_sex_girl"
            android:gravity="center"
            android:tag="2"
            android:text="小公主"
            android:textColor="@drawable/text_color_selector"
            android:textSize="@dimen/textSize_16" />
    </RadioGroup>


    <View
        android:id="@+id/line"
        style="@style/h_divider_light_gray"
        android:layout_below="@id/rg"
        android:layout_marginTop="13dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/line"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/text_default_l"
            android:textSize="16sp"
            android:textStyle="bold" />

        <View style="@style/v_divider" />

        <TextView

            android:id="@+id/tv_confirm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>


</RelativeLayout>